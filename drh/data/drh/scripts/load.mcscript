    /fill ~-40 $(y_ceil).$(i) ~-40 ~40 $(y_ceil).$(i) ~40 glass replace gravel

    /fill ~-40 $(y_ceil).$(i) ~-40 ~40 $(y_ceil).$(i) ~40 glass replace sand

    /fill ~-40 $(y_ceil).$(i) ~-40 ~40 $(y_ceil).$(i) ~40 glass replace lava
