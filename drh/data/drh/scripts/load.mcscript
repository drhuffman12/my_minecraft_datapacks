function add_ceiling {
  // const y_ce = 6
  
  const y_ceil = Array{6,11,16}

  for(0,2,i){
    /fill ~-40 $(y_ceil).$(i) ~-40 ~40 $(y_ceil).$(i) ~40 glass replace stone
    /fill ~-40 $(y_ceil).$(i) ~-40 ~40 $(y_ceil).$(i) ~40 glass replace bedrock
